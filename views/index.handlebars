<div class="container">
    <div class="row">
        <img src="assets/images/burger.png" class="img-fluid mx-auto">
    </div>
        <h1 class="text-center">Eat Da Burger</h1>
    <div class="row">
        <div class="col-sm-6 text-right">
            <h3>Burgers to Devour</h3>
            <p>
            {{#each burger}} 
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/unless}} 
            {{/each}}
            </p>
        </div>
        <div class="col-sm-6">
            <h3>Devoured Burgers</h3>
            <p>
            {{#each burger}} 
                {{#if devoured}}
                    <p>{{id}}. {{burger_name}}</p>
                {{/if}} 
            {{/each}}
            </p>
        </div>
    </div>
        <form class="create-form">

        <div class="form-group text-center">
            <div>
            <label for="ca">Add New Burger</label>
            </div>
            <input type="text" id="ca" name="name">
        </div>
        <div class="row">
            <button type="submit" class="btn btn-primary mx-auto" id="submit-burger">Submit</button>
        </div>
    </form>
</div>