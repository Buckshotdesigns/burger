<div class="container">
    <div class="row">
        <img src="assets/images/burger.png" class="img-fluid mx-auto">
    </div>
        <h1 class="text-center">Eat Da Burger</h1>
    <div class="row">
        <div class="col-sm-6">
            <ul>
            {{#each burger}} {{#unless this.devoured}}
            <p>
                {{this.id}}. {{this.burger_name}}
                <button data-planid="{{this.id}}" class="devour btn btn-primary btn-sm">devour it!</button>
            </p>
            {{/unless}} {{/each}}
            </ul>
        </div>
        <div class="col-sm-6">
            <ul>
                {{#each burger}} {{#if this.devoured}}
                <p>
                {{this.id}}. {{this.burger_name}}
                </p>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
        <form id="burger-add" class="button-size text-center">
            <textarea type="text" name="burger-field"></textarea>
        </form>
        <div class="row">
            <button type="submit" class="btn btn-primary mx-auto">Submit</button>
        </div>
</div>